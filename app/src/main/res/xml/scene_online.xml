<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/begin"
        motion:constraintSetEnd="@+id/end"
        motion:motionInterpolator="linear"
        motion:duration="300"/>

    <ConstraintSet
        android:id="@+id/begin">
        <Constraint
            android:id="@+id/ivOnline"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:alpha="0"
            motion:layout_constraintBottom_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"/>
        <Constraint
            android:id="@+id/tvOnline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:alpha="0"
            motion:layout_constraintTop_toTopOf="@id/ivOnline"
            motion:layout_constraintBottom_toBottomOf="@id/ivOnline"
            motion:layout_constraintStart_toEndOf="@id/ivOnline"/>

        <Constraint
            android:id="@+id/ivOffline"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:alpha="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/tvOffline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:alpha="1"
            motion:layout_constraintTop_toTopOf="@id/ivOffline"
            motion:layout_constraintBottom_toBottomOf="@id/ivOffline"
            motion:layout_constraintEnd_toStartOf="@id/ivOffline"/>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end">
        <Constraint
            android:id="@+id/ivOnline"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:alpha="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"/>
        <Constraint
            android:id="@+id/tvOnline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:alpha="1"
            motion:layout_constraintTop_toTopOf="@id/ivOnline"
            motion:layout_constraintBottom_toBottomOf="@id/ivOnline"
            motion:layout_constraintStart_toEndOf="@id/ivOnline"/>

        <Constraint
            android:id="@+id/ivOffline"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:alpha="0"
            motion:layout_constraintBottom_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/tvOffline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:alpha="0"
            motion:layout_constraintTop_toTopOf="@id/ivOffline"
            motion:layout_constraintBottom_toBottomOf="@id/ivOffline"
            motion:layout_constraintEnd_toStartOf="@id/ivOffline"/>
    </ConstraintSet>

</MotionScene>